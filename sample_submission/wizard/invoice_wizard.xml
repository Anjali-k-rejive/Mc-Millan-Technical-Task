<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_sample_submission_invoice_confirm_wizard_form" model="ir.ui.view">
        <field name="name">sample.submission.invoice.confirm.wizard.form</field>
        <field name="model">sample.submission.invoice.confirm.wizard</field>
        <field name="arch" type="xml">
            <form string="Confirm Invoice Generation">
                <group>
                    <field name="sample_submission_id" invisible="1"/>
                    <field name="reference" readonly="1"/>
                    <field name="price" readonly="1"/>
                    <field name="discount" readonly="1"/>
                    <field name="vat" readonly="1"/>
                </group>
                <footer>
                    <button string="Confirm" type="object" name="action_confirm" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>